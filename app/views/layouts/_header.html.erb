<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Appoint Share</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if end_user_signed_in? %>
          <li>
            <%= form_with url: end_users_search_path, method: :get, local: true do |f| %>
            <%= f.text_field :content %>
            <%= f.select :model, options_for_select({ "EndUser" => "end_user", "Schedule" => "schedule" }) %>
            <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
            <%= f.submit '検索' %>
          <% end %>
          </li>
          <li>
            <%= link_to user_page_path(current_end_user),class: 'nav-link text-light' do %>
              マイページ
            <% end %>
          </li> 
          <li>
            <%=  link_to user_schedule_path(current_end_user),class: 'nav-link text-light' do %>
              投稿した予定
            <% end %>
          </li>
          <li>
            <%=  link_to attend_index_path(current_end_user),class: 'nav-link text-light' do %>
              参加予定
            <% end %>
          </li>
          <li>
            <%= link_to end_user_followings_path(current_end_user),class: 'nav-link text-light' do %>
              連携社員
            <% end %>
          </li>
          <li>
            <%= link_to destroy_end_user_session_path,method: :delete,class: 'nav-link text-light' do %>
              ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to root_path,class: 'nav-link text-light' do %>
              HOME
            <% end %>
          </li>
          <li>
            <%= link_to about_path,class: 'nav-link text-light' do %>
              ABOUT
            <% end %>
          </li>
          <li>
            <%= link_to new_end_user_registration_path,class: 'nav-link text-light' do %>
             新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_end_user_session_path ,class: 'nav-link text-light' do %>
             ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>